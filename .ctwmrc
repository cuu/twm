"XF86AudioRaiseVolume" = : all : f.exec "exec pactl set-sink-volume @DEFAULT_SINK@ +5%"

"Print" =  : all : f.exec "exec maim --select --noopengl | xclip -selection clipboard -t image/png &"

"Print" =  m : all : f.exec "exec maim -B --noopengl | xclip -selection clipboard -t image/png &"


